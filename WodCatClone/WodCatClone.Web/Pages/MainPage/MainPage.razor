                        <strong style="color: #a3a2ab;">Украина</strong>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @foreach (var item in Halls)
                        {
                            <IndividualActions Hall="item"/>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 p-2">
            <div class="exercises mb-3 p-3">
                <div class="row">
                    <div class="col ml-3 mb-2">
                        <h1 style="font-size: 25px; color: white;">Лучшие упражнения</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col ml-3 mb-2">
                        <img src="img/Ukraine.png" style="width: 30px; height: 20px;" class="mr-2"/>
                        <strong style="color: #a3a2ab;">Украина</strong>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @foreach (var item in Exercises)
                        {
                            <IndividualActions Exercise="item"/>
