                    </div>
                </div>
                <div class="row">
                    <div class="col ml-3 mb-2">
                        <img src="img/Ukraine.png" style="width: 30px; height: 20px;" class="mr-2"/>
                        <strong style="color: #a3a2ab;">Украина</strong>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @foreach (var item in Articles)
                        {
                            <IndividualActions Article="item"/>
