@page "/register"

<HeaderComponent />

<div class="newWrapper">
    <div class="row">
        <div class="col loginContainer">
            <div class="login">
                <h1 style="color: white; font-size: 35px;">Регистрация</h1>
                <EditForm Model="@MainRegister" OnValidSubmit="@Register">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <InputText
                        id="name"
                        @bind-Value="MainRegister.Name"
                        class="mb-3 formLogin"
                        placeholder="Имя"/>
                    <InputText
                        id="surname"
                        @bind-Value="MainRegister.Surname"
                        class="mb-3 formLogin"
                        placeholder="Фимилия"/>
                    <InputText
                        id="nickname"
                        @bind-Value="MainRegister.NickName"
                        class="mb-3 formLogin"
                        placeholder="Ник"/>
                    <InputText
                        id="email"
                        @bind-Value="MainRegister.Email"
                        class="mb-3 formLogin"
                        placeholder="E-mail"/>
                    <InputText
                        id="password"
                        type="password"
                        @bind-Value="MainRegister.Password"
                        class="mb-3 formLogin"
                        style="width: 100%; height: 40px; padding-left: 20px;"
                        placeholder="Пароль"/>
                    <InputText
                        id="confirmPassword"
                        type="password"
                        @bind-Value="MainRegister.ConfirmPassword"
                        class="mb-3 formLogin"
                        style="width: 100%; height: 40px; padding-left: 20px;"
                        placeholder="Подтвердить Пароль"/>
                    <InputDate
                        id="birthday"
                        @bind-Value="MainRegister.Birthday"
                        class="mb-3 formLogin"
                        placeholder="Birthday"/>
                    <div class="custom-control custom-checkbox mb-2">
                        <input
                            type="checkbox"
                            class="custom-control-input"
                            id="man"
                            @bind="Man"
                            @onclick="() => { Man = !Man; Woman = !Woman; }"/>
                        <label
                            class="custom-control-label"
                            for="man"
                            style="color: lightgrey">Мужчина</label>
                    </div>
                    <div class="custom-control custom-checkbox mb-2">
                        <input
                            type="checkbox"
                            class="custom-control-input"
                            id="woman"
                            @bind="Woman"
                            @onclick="() => { Woman = !Woman; Man = !Man; }"/>
                        <label
                            class="custom-control-label"
                            for="woman"
                            style="color: lightgrey">Женщина</label>
                    </div>
                    <div class="row">
                        <div class="col mb-2">
                            <select class="selectedFormResult mb-2" @bind="MainRegister.Town">
                                <option value="">Город</option>
                                @foreach (var item in Town)
                                {
                                    <option value="@item.Value">
                                        @item.Content
                                    </option>
                                }
                            </select>
                        </div>
                    </div>

                    <button class="mb-2 authButton" type="submit">Регистрация</button>
                </EditForm>
                <p style="color: #bdc1c6;">Уже есть аккаунт? &nbsp;
                    <a href="/login" class="mainLink">Войти</a>
                </p>
            </div>
        </div>
    </div>
</div>