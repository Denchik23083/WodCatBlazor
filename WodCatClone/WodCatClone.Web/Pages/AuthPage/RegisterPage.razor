@page "/register"

<HeaderComponent />

<div class="newWrapper">
    <div class="row">
        <div class="col loginContainer">
            <div class="login">
                <h1 style="color: white; font-size: 35px;">Регистрация</h1>
                <EditForm Model="@RegisterModel" OnValidSubmit="@Register">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <InputText
                        id="name"
                        @bind-Value="RegisterModel.Name"
                        class="mb-3 formLogin"
                        placeholder="Имя"/>
                    <InputText
                        id="surname"
                        @bind-Value="RegisterModel.Surname"
                        class="mb-3 formLogin"
                        placeholder="Фимилия"/>
                    <InputText
                        id="nickname"
                        @bind-Value="RegisterModel.NickName"
                        class="mb-3 formLogin"
                        placeholder="Ник"/>
                    <InputText
                        id="email"
                        @bind-Value="RegisterModel.Email"
                        class="mb-3 formLogin"
                        placeholder="E-mail"/>
                    <InputText
                        id="password"
                        type="password"
                        @bind-Value="RegisterModel.Password"
                        class="mb-3 formLogin"
                        style="width: 100%; height: 40px; padding-left: 20px;"
                        placeholder="Пароль"/>
                    <InputText
                        id="confirmPassword"
                        type="password"
                        @bind-Value="RegisterModel.ConfirmPassword"
                        class="mb-3 formLogin"
                        style="width: 100%; height: 40px; padding-left: 20px;"
                        placeholder="Подтвердить Пароль"/>
                    <InputDate
                        id="birthday"
                        @bind-Value="RegisterModel.Birthday"
                        class="mb-3 formLogin"
                        placeholder="Birthday"/>
                    <div class="row">
                        <div class="col mb-2">
                            <select class="selectedFormResult mb-2" @bind="RegisterModel.GenderId">
                                <option value="">Пол</option>
                                @foreach (var item in Genders)
                                {
                                    <option value="@item.Id">
                                        @item.Type.ToString()
                                    </option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-2">
                            <select class="selectedFormResult mb-2" @bind="RegisterModel.Town">
                                <option value="">Город</option>
                                @foreach (var item in Town)
                                {
                                    <option value="@item.Value">
                                        @item.Content
                                    </option>
                                }
                            </select>
                        </div>
                    </div>

                    <button class="mb-2 authButton" type="submit">Регистрация</button>
                </EditForm>
                <p style="color: #bdc1c6;">Уже есть аккаунт? &nbsp;
                    <a href="/login" class="mainLink">Войти</a>
                </p>
            </div>
        </div>
    </div>
</div>