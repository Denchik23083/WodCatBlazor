<div class="formAddEditEvent mt-3 p-3">
    <div class="row">
        <div class="col">
            <h2 class="mainInfoAboutEvent mb-3">Основная информация о мероприятии</h2>
        </div>
    </div>    
    <div class="row">
        <div class="col-6">
            <div class="row">
                <div class="col mb-2">
                    <h5 style="color: white;">Выберите логотип</h5>
                    <select class="select form-control" @onchange="SelectedImage">
                        <option value="None">Эмблема</option>
                        @foreach (var item in EventEmblem)
                        {
                            <option value="@item.Image">
                                @item.Name
                            </option>
                        }
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col mb-2">
                    @if (Image is not "None")
                    {
                        <img src="@Image" width="300" height="150"/>
                    }                    
                </div>
            </div>
            <div class="row">
                <div class="col mb-2">
                    <h5 style="color: white;">Выберите зал</h5>
                    <select class="select form-control" @onchange="SelectedHallImage">
                        <option value="None">Зал</option>
                        @foreach (var item in Halls)
                        {
                            <option value="@item.Id">
                                @item.Name
                            </option>
                        }
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col mb-2">
                    @if (HallImage is not "None")
                    {
                        <img src="@HallImage" width="150" height="150"/>
                    }                    
                </div>
            </div>
        </div>
        <div class="col-6">
            <EditForm Model="Event" OnValidSubmit="Submit">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <div class="row">
                    <div class="col mb-2">
                        <InputText
                            @bind-Value="Event.Name"
                            class="selectedFormResult mb-2 mr-2"
                            placeholder="Имя Клуба"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-2">
                        <select class="selectedFormResult mb-2" @bind="Event.TypeEvent">
                            <option value="None">Тип мероприятия</option>
                            @foreach (var item in TypeEvent)
                            {
                                <option value="@item.Filter">
                                    @item.Content
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-2">
                        <select class="selectedFormResult mb-2" @bind="Event.TypeSport">
                            <option value="None">Вид спорта</option>
                            @foreach (var item in TypeSport)
                            {
                                <option value="@item.Filter">
                                    @item.Content
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-2">
                        <select class="selectedFormResult mb-2" @onchange="TownValue">
                            <option value="None">Город</option>
                            @foreach (var item in Town)
                            {
                                <option value="@item.Filter">
                                    @item.Content
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-2">
                        <InputText
                            @bind-Value="Event.Location"
                            class="selectedFormResult mb-2"
                            placeholder="Адрес"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-2">
                        <div class="selectedFormResult" @onclick="() => IsShow = !IsShow">Упражнения</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @if (IsShow)
                        {
                            @if (Exercises.Count is not 0)
                            {
                                <div class="selected mb-2">
                                    @foreach (var item in Exercises)
                                    {
                                        <span class="item mb-2" @onclick="() => AddExercises(item.Id)">@item.Name</span><br/>
                                    }
                                </div>
                            }
                            else
                            {
                                IsShow = false;
                            }
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-2">
                        @foreach (var item in SelectedExercises)
                        {
                            <span class="foo">@item.Name
                                <button class="selectedTypeClose p-0 mr-3" @onclick="() => RemoveExercises(item.Id)" type="button">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </span>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-2">
                        <textarea 
                                placeholder="Описание" 
                                class="textarea" 
                                @bind="Event.Description">                                
                        </textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-2">
                        <InputDate
                            @bind-Value="Event.StartDate"
                            class="selectedFormResult mb-2 mr-2"
                            placeholder="Начало" 
                            type="date"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-2">
                        <InputDate
                            @bind-Value="Event.EndDate"
                            class="selectedFormResult mb-2 mr-2"
                            placeholder="Завершение" 
                            type="date"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col text-right">
                        @if (!IsDisplaySubmitButton)
                        {
                            <button
                                class="btn btn-primary"
                                disabled="disabled"
                                type="submit">Сохранить</button>
                        }
                        else
                        {
                            <button
                                class="btn btn-primary"
                                type="submit">Сохранить</button>
                        }
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>