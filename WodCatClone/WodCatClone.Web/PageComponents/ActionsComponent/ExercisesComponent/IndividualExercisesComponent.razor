<div class="exercises mb-3">
    <div class="row ml-1 mt-3 mr-1 mb-3">
        <div class="col">
            <a class="Name" href="@_url">@Exercises.Name</a>
            <span class="cub">@Exercises.Modality</span>
        </div>
    </div>

    <div class="row ml-1 mt-3 mr-1 mb-3">
        <div class="col-6">
            @Exercises.Description
        </div>
        <div class="col-6">
            <iframe
                width="600"
                height="300"
                src="@Exercises.Image"
                frameborder="0"
                allow="accelerometer;autoplay;clipboard-write;encrypted-media;gyroscope;picture-in-picture"
                allowfullscreen>
            </iframe>
        </div>
    </div>

    <div class="row  ml-1 mt-3 mr-1 mb-3">
        <div class="col-4 text-left">
            <span>Сложность: @Exercises.Complexity</span>
        </div>

        <div class="col-4 text-center">
            <span>Движения: @Exercises.Movement</span>
        </div>

        <div class="col-4 text-right">
            <span>Инвентарь: @Exercises.Inventory</span>
        </div>
    </div>
</div>