<div class="exercises mb-3">
    <div class="row ml-1 mt-3 mr-1 mb-3">
        <div class="col">
            <a class="Name" href="@Url">@Exercise.Name</a>
            <span class="cub">@Exercise.Modality</span>
        </div>
    </div>

    <div class="row ml-1 mt-3 mr-1 mb-3">
        <div class="col-6">
            @Exercise.Description
        </div>
        <div class="col-6">
            <iframe
                width="600"
                height="300"
                src="@Exercise.Image"
                frameborder="0"
                allow="accelerometer;autoplay;clipboard-write;encrypted-media;gyroscope;picture-in-picture"
                allowfullscreen>
            </iframe>
        </div>
    </div>

    <div class="row  ml-1 mt-3 mr-1 mb-3">
        <div class="col-4 text-left">
            <span>Сложность: @Exercise.Complexity</span>
        </div>

        <div class="col-4 text-center">
            <span>Движения: @Exercise.Movement</span>
        </div>

        <div class="col-4 text-right">
            <span>Инвентарь: @Exercise.Inventory</span>
        </div>
    </div>
</div>