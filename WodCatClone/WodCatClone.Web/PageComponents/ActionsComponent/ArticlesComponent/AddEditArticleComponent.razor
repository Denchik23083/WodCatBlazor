<div class="formAddEditArticle mt-3 p-3">
    <div class="row">
        <div class="col">
            <h2 class="mainInfoAboutArticle mb-3">Основная информация о статьи</h2>
        </div>
    </div>    
    <div class="row">
        <div class="col-6">
            <div class="row">
                <div class="col mb-2">
                    @if (IsBadEmblem)
                    {
                        <div class="row">
                            <div class="col">
                                <div class="text-danger">Выберите правильный логотип</div>
                            </div>
                        </div>
                    }
                    <h5 style="color: white;">Выберите логотип</h5>
                    <select class="select form-control" @onchange="SelectedImage">
                        <option value="None">Эмблема</option>
                        @foreach (var item in ArticleEmblem)
                        {
                            <option value="@item.Image">
                                @item.Name
                            </option>
                        }
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @if (Image is not "None")
                    {
                        <img src="@Image" width="150" height="150"/>
                    }                    
                </div>
            </div>
        </div>
        <div class="col-6">
            <EditForm Model="@Article" OnValidSubmit="Submit">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <div class="row">
                    <div class="col mb-2">
                        <InputText
                            @bind-Value="Article.Name"
                            class="selectedFormResult mb-2 mr-2"
                            placeholder="Имя Статьи"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-2">
                        <div class="selectedFormResult" @onclick="() => IsShow = !IsShow">Тип</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @if (IsShow)
                        {
                            @if (ArticleTypes.Count is not 0)
                            {
                                <div class="selected mb-2">
                                    @foreach (var item in ArticleTypes)
                                    {
                                        <span class="item mb-2" @onclick="() => AddArticleType(item.Value)">@item.Content</span><br/>
                                    }
                                </div>
                            }
                            else
                            {
                                IsShow = false;
                            }
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-2">
                        @foreach (var item in SelectedType)
                        {
                            <span class="foo">@item
                                <button class="selectedTypeClose p-0 mr-3" @onclick="() => RemoveSelectedType(item)" type="button">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </span>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-2">
                        <select class="selectedFormResult mb-2" @bind="Article.Rating">
                            <option value="None">Рейтинг</option>
                            @foreach (var item in ArticleRating)
                            {
                                <option value="@item.Value">
                                    @item.Content
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-2">
                        <textarea 
                                placeholder="Описание" 
                                class="textarea" 
                                @bind="Article.Description">                                
                        </textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-2">
                        <textarea 
                                placeholder="Полное описание" 
                                class="textarea" 
                                @bind="Article.FullDescription">                                
                        </textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col text-right">
                        <button
                            class="btn btn-primary"
                            type="submit">Сохранить</button>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>