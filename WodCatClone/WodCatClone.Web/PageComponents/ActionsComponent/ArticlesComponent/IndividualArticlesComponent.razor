<div class="articles mb-3">
    <div class="row p-3">
        <div class="col">
            <a class="ArticleName" href="@Url">@Article.Name</a>
        </div>
    </div>
    @if (Article.Rating is not null)
    {
        <div class="row p-3 pt-0">
            <div class="col">
                <span class="greenCub" style="margin-left: 0">@Article.Rating / 10</span>
            </div>
        </div>
    }
    <div class="row p-3">
        <div class="col-3">
            @if (Image is not null)
            {
                <div class="ArticleImage" style="background-image: url(/@Image)"></div>
            }
        </div>
        <div class="col-9">
            @Article.Description
        </div>
    </div>
    @if (ArticleType is not null)
    {
        <div class="row p-3">
            <div class="col">
                @foreach (var item in ArticleType)
                {
                    <span class="articlesType">@item</span>
                    @if (Value < ArticleType.Length - 1)
                    {
                        <span class="articlesType">&nbsp;|&nbsp;</span>
                        Value++;
                    }
                }
            </div>
        </div>
    }
</div>