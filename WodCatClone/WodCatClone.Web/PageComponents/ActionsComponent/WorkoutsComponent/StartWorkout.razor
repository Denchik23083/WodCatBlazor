@if (DisplayStartWorkout)
{
    <div class="modal-backdrop show"></div>

    <div class="modal fade show" 
         id="exampleModal" 
         tabindex="-1" 
         role="dialog" 
         aria-labelledby="exampleModal"
         aria-hidden="true"
         style="display: block">
    
        <div class="modal-dialog StartDialog" role="document">
            <div class="modal-content StartDialogContent">
                <div class="modal-header" style="border: 0;">
                    <h5 class="modal-title">Hallo</h5>
                    <button class="close" @onclick="OnCancel" type="button">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
}