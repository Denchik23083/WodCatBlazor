<div class="row">
    <div class="col-3 pr-1">
        <select class="d-inline fingerFilter pt-2 pb-2" @bind="_filterType">
            <option value="None">Вид спорта</option>
            @foreach (var item in FilterType)
            {
                <option value="@item.Filter">@item.Content</option>
            }
        </select>
    </div>
    <div class="col-3 pr-1">
        <select class="d-inline fingerFilter pt-2 pb-2" @bind="_filterAim">
            <option value="None">Цель</option>
            @foreach (var item in FilterAim)
            {
                <option value="@item.Filter">@item.Content</option>
            }
        </select>
    </div>
    <div class="col-3 pr-1">
        <button
            type="button"
            class="btn btn-primary form-control mb-2"
            @onclick="Filter">
            Search
        </button>
    </div>
    <div class="col-3">
        <button
            type="button"
            class="btn btn-danger form-control mb-2"
            @onclick="Reset">
            Reset
        </button>
    </div>
</div>
<ListProgramsComponent ListOfItems="Programs"/>