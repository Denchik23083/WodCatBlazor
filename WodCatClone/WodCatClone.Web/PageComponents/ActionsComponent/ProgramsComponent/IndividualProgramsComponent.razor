<div class="exercises mb-3">
    <div class="row ml-1 mt-3 mr-1 mb-3">
        <div class="col">
            <a class="Name bold" href="@_url">@Programs.Name</a>
            @if (Programs.Rating is not null)
            {
                <span class="greenCub">@Programs.Rating / 10</span>
            }
        </div>
    </div>
    <div class="row ml-1 mt-3 mr-1 mb-3">
        @if (Programs.Image is not null)
        {
            <div class="col-3 p-0">
                <img src="@Programs.Image" style="width: 100%; height: 250px;"/>
            </div>
            <div class="col-7 text-light">
                @Programs.Description
            </div>
            if (Hall is not null)
            {
                <div class="col-2">
                    <img 
                        src="@HallEmblem" 
                        width="100" height="100" 
                        @onclick="() => LinkHall(Hall.Id)" 
                        class="home"/>
                </div>
            }
        }
        else
        {
            <div class="col-10 text-light">
                @Programs.Description
            </div>
            if (Hall is not null)
            {
                <div class="col-2">
                    <img 
                        src="@HallEmblem" 
                        width="100" height="100" 
                        @onclick="() => LinkHall(Hall.Id)" 
                        class="home"/>
                </div>
            }
        }
    </div>
    <div class="row ml-1 mt-3 mr-1 mb-3">
        <div class="col">
            @foreach (var item in Type)
            {
                <span style="color: #bdc1c6;">@item&nbsp;&nbsp;</span>
            }
        </div>
    </div>
</div>